%section.container.mx-auto.px-4
  %h1.text-indigo.font-semibold.mx-2 Food store  
  %div.container.mx-auto.px-4#Store
    %button.tabs{:onclick => "openDiv('starters')"} Starters
    %button.tabs{:onclick => "openDiv('maincourse')"} Main Course
    %button.tabs{:onclick => "openDiv('desserts')"} Desserts
    %button.tabs{:onclick => "openDiv('sides')"} Side Orders and Drinks
  - @categories.each do |category|
    %h4.mb-6= category.name
    - category.products.each do |product|
      %div.inline-block.max-w-xs.rounded.overflow-hidden.shadow-lg.mb-16.mx-6{id: dom_id(product)}
                
        %img.w-full.h-auto{src: image_generator[category.name.to_sym][product.name.to_sym]}/
        .px-6.py-4.h-32
          .font-bold.text-2xl.mb-2 
            = product.name
          %p.text-grey-darker.text-2xl
            = product.description
        .px-6.py-4
          %span.inline-block.bg-grey-lighter.rounded-full.px-3.py-1.text-2xl.font-semibold.text-grey-darker.mr-2
            = number_to_currency(product.price, unit: "kr", format: "%n %u")
          %span.inline-block.bg-grey-lighter.rounded-full.px-3.py-1.text-2xl.font-semibold.text-grey-darker.mr-2
            = add_to_cart(product)
  #starter.tab-categories.hidden.block
    %p here all starters
    
  #maincourse.tab-categories.hidden
    %p here all main

  #desserts.tab-categories.hidden
    %p here all desserts

  #sides.tab-categories.hidden
    %p here all sides